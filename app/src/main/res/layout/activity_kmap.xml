<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kmap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/fondoprincipal"
    tools:context="com.example.usuario.dinamicview.KmapActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spNoKmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>

            <TextView
                android:id="@+id/tvFuncion"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFondo"
                />

            <TextView
                android:id="@+id/tvAmenos"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFondo"/>

            <TableLayout
                android:id="@+id/tlKmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TableLayout>

            <TextView
                android:id="@+id/tvAmas"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFondo"/>

            <TableLayout
                android:id="@+id/tlKmap2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TableLayout>

            <LinearLayout
                android:id="@+id/llBotones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonredrep"
                        android:padding="3dp"
                        android:src="@drawable/saltar_a_inicio_48"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:id="@+id/btnAtras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonredrep"
                        android:padding="3dp"
                        android:src="@drawable/rebobinar_48"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:id="@+id/btnPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonredrep"
                        android:padding="3dp"
                        android:src="@drawable/play_48"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonredrep"
                        android:padding="3dp"
                        android:src="@drawable/pausa_48"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:id="@+id/btnAdela"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonredrep"
                        android:padding="3dp"
                        android:src="@drawable/avance_r_pido_48"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp">
                    <ImageButton
                        android:id="@+id/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonredrep"
                        android:padding="3dp"
                        android:src="@drawable/fin_48"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/txtFuncMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/tam_letra"
                    android:textColor="@color/colorFondo"
                    android:gravity="center" />
            </RelativeLayout>
            <Button
                android:id="@+id/btnCircuito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorFondo"
                android:background="@drawable/botonredrep"
                android:padding="5dp"
                android:text="@string/muestra_circuito"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
